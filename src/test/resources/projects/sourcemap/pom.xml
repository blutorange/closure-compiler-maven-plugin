<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>com.github.blutorange</groupId>
	<artifactId>closure-compiler-maven-plugin-test-sourcemap</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	<parent>
		<groupId>com.github.blutorange</groupId>
		<artifactId>closure-compiler-maven-plugin-test</artifactId>
		<version>1.0-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>

	<build>
		<plugins>
			<plugin>
				<groupId>com.github.blutorange</groupId>
				<artifactId>closure-compiler-maven-plugin</artifactId>
				<configuration>
					<baseSourceDir>${project.basedir}</baseSourceDir>
					<baseTargetDir>${project.build.directory}</baseTargetDir>
					<closureCreateSourceMap>true</closureCreateSourceMap>
					<closureLanguageOut>ECMASCRIPT3</closureLanguageOut>
				</configuration>
				<executions>
					<execution>
						<id>default-minify</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>minify</goal>
						</goals>
						<configuration>
							<closureSourceMapOutputType>reference</closureSourceMapOutputType>
							<outputFilename>reference.js</outputFilename>
						</configuration>
					</execution>
					<execution>
						<id>file</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>minify</goal>
						</goals>
						<configuration>
							<closureSourceMapOutputType>file</closureSourceMapOutputType>
							<outputFilename>file.js</outputFilename>
						</configuration>
					</execution>
					<execution>
						<id>inline</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>minify</goal>
						</goals>
						<configuration>
							<closureSourceMapOutputType>inline</closureSourceMapOutputType>
							<outputFilename>inline.js</outputFilename>
						</configuration>
					</execution>
					<execution>
						<id>inline-content</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>minify</goal>
						</goals>
						<configuration>
							<closureIncludeSourcesContent>true</closureIncludeSourcesContent>
							<closureSourceMapOutputType>inline</closureSourceMapOutputType>
							<outputFilename>inline-content.js</outputFilename>
						</configuration>
					</execution>
					<execution>
						<id>location-mapping</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>minify</goal>
						</goals>
						<configuration>
							<closureSourceMapLocationMappings>
								<closureSourceMapLocationMapping>
									<name>js/</name>
									<value>localhost://foobar/</value>
								</closureSourceMapLocationMapping>
							</closureSourceMapLocationMappings>
							<closureSourceMapOutputType>reference</closureSourceMapOutputType>
							<sourceDir>test2</sourceDir>
							<outputFilename>location-mapping.js</outputFilename>
						</configuration>
					</execution>
                                        <execution>
                                                <id>location-mapping-empty</id>
                                                <phase>generate-resources</phase>
                                                <goals>
                                                        <goal>minify</goal>
                                                </goals>
                                                <configuration>
                                                        <closureSourceMapLocationMappings>
                                                                <closureSourceMapLocationMapping>
                                                                        <name></name>
                                                                        <value>localhost://bazbar/</value>
                                                                </closureSourceMapLocationMapping>
                                                        </closureSourceMapLocationMappings>
                                                        <closureSourceMapOutputType>reference</closureSourceMapOutputType>
                                                        <sourceDir>test2/js</sourceDir>
                                                        <outputFilename>location-mapping-empty.js</outputFilename>
                                                </configuration>
                                        </execution>
					<execution>
						<id>different-source-map-path</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>minify</goal>
						</goals>
						<configuration>
							<closureSourceMapOutputType>reference</closureSourceMapOutputType>
							<closureSourceMapName>sourcemap/#{filename}.map</closureSourceMapName>
							<outputFilename>map-path.js</outputFilename>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
